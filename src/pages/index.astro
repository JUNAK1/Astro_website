<Layout metadata={metadata}>
<div class="seccion-con-fondo fondo-con-imagen borde-image" style="background-image: url('https://e1.pxfuel.com/desktop-wallpaper/276/172/desktop-wallpaper-coffee-beans-backgrounds-beans.jpg');">
