---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(255, 0, 0); 
    --aw-color-secondary: rgb(0, 55, 97);
    --aw-color-accent: rgb(255, 0, 0);

    --aw-color-text-heading: rgb(0 0 0); 
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(249, 236, 194);

    --aw-color-bg-page-dark: rgb(20, 20, 40);

    ::selection {background-color: rgb(213, 193, 176);}

  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(97, 60, 150);
    --aw-color-secondary: rgb(55, 95, 165);
    --aw-color-accent:rgb(156, 10, 34);

    --aw-color-text-heading: rgb(0 0 0); 
    --aw-color-text-default: rgb(194 194 194);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {background-color: rgb(15,15,15); color: rgb(150, 150, 150)}

  }
</style>
